<div class="row-fluid">
    <div class="span4 well">
<%= form_for @employee, :html => { :class => "form-horizontal employee center" } do |f| %>

  <fieldset>
      <% if @employee.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title"><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h3>
            </div>
            <div class="panel-body">
                <ul>
                    <% @employee.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        </div>
      <% end %>

      <div class="control-group">
          <%= f.label 'Employee Id', :class => 'control-label' %>
          <div class="controls">
              <%= f.text_field :employee_id, :class => 'form-control' %>
          </div>
          <%= error_span(@employee[:employee_id]) %>
      </div>
      <div class="control-group">
          <%= f.label :employee_name, :class => 'control-label' %>
          <div class="controls">
              <%= f.text_field :employee_name, :class => 'form-control' %>
          </div>
          <%= error_span(@employee[:employee_name]) %>
      </div>
      <div class="control-group">
          <%= f.label :level, :class => 'control-label' %>
          <div class="controls">
              <%= f.text_field :level, :class => 'form-control' %>
          </div>
          <%= error_span(@employee[:level]) %>
      </div>
      <div class="control-group">
          <%= f.label :email, :class => 'control-label' %>
          <div class="controls">
              <%= f.text_field :email, :class => 'form-control' %>
          </div>
          <%= error_span(@employee[:email]) %>
      </div>
      <div class="control-group">
          <%= f.label :new_password, :class => 'control-label' %>
          <div class="controls">
              <%= f.password_field :new_password, :class => 'form-control' %>
          </div>
          <%= error_span(@employee[:new_password]) %>
      </div>
      <div class="control-group">
          <%= f.label :new_password_confirmation, :class => 'control-label' %>
          <div class="controls">
              <%= f.password_field :new_password_confirmation, :class => 'form-control' %>
          </div>
          <%= error_span(@employee[:new_password_confirmation]) %>
      </div>

      <div class="form-actions">
          <%= f.submit nil, :class => 'btn btn-primary' %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            employees_path, :class => 'btn btn-default' %>
      </div>

  </fieldset>

<% end %>
    </div>
</div>
