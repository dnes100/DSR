<%- model_class = Level -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:level_id) %>:</strong></dt>
  <dd><%= @level.level_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:level_name) %>:</strong></dt>
  <dd><%= @level.level_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              levels_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_level_path(@level.level_id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              level_path(@level.level_id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
